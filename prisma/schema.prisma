generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid())
  email String @unique

  firstName String
  lastName String

  passwordHash String

  role Role @relation(fields: [roleId], references: [id])
  roleId String

  invitationsCreated Invitation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([roleId])
  @@map("users")
}

model Role {
  id String @id @default(uuid())
  name String

  permissions Permission[]

  users User[]
  invitations Invitation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
  @@map("roles")
}


model Permission {
  id String @id @default(uuid())
  action String
  subject String

  roles Role[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([action])
  @@index([subject])
  @@map("permissions")
}

model Invitation {
  id String @id @default(uuid())
  email String

  role Role @relation(fields: [roleId], references: [id])
  roleId String
  status InvitationStatus @default(PENDING)

  createdBy User @relation(fields: [createdById], references: [id])
  createdById String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([roleId])
  @@index([createdById])
  @@map("invitations")
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  REVOKED
}