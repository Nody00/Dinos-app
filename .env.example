# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/nestjs_db?schema=public"

# JWT
JWT_SECRET="your-secret-key-change-this-in-production"
JWT_EXPIRATION="7d"

# Email Provider Selection
EMAIL_PROVIDER=smtp

# SMTP Configuration (for MailHog/Development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@yourapp.com
SMTP_FROM_NAME=Your App Name

# SendGrid Configuration (for Production)
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_QUEUE=events_queue

# Event Processing
EVENT_POLL_INTERVAL_MS=5000
EVENT_BATCH_SIZE=50
EVENT_MAX_RETRIES=5
EVENT_OUTBOX_RETENTION_DAYS=7